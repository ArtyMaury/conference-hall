{
  "name": "@conference-hall/server",
  "version": "0.38.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:migrate && npm run dev:exec",
    "dev:exec": "nodemon ./src/index.ts",
    "dev:migrate": "dotenv -e .env.dev -- prisma migrate dev --preview-feature",
    "dev:studio": "dotenv -e .env.dev -- prisma studio",
    "test": "npm run test:migrate && npm run test:exec",
    "test:exec": "jest -i",
    "test:migrate": "dotenv -e .env.test -- prisma migrate dev --preview-feature",
    "lint": "eslint ./src/* ./tests/* --ext .js,.ts",
    "prod:start": "node dist/index.js",
    "prod:build": "tsc -p tsconfig.prod.json",
    "prod:migrate": "prisma migrate dev --preview-feature"
  },
  "dependencies": {
    "@prisma/client": "2.18.0",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-validator": "^6.9.2",
    "firebase-admin": "^9.5.0",
    "helmet": "^4.4.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.30",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.4.0",
    "firebase": "^8.2.9",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prisma": "^2.17.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
