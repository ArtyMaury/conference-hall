{
  "name": "@conference-hall/server",
  "version": "0.38.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:migrate && npm run dev:exec",
    "dev:exec": "nodemon ./src/index.ts",
    "dev:migrate": "dotenv -e .env.dev -- prisma migrate dev --preview-feature",
    "dev:studio": "dotenv -e .env.dev -- prisma studio",
    "test": "npm run test:migrate && npm run test:exec",
    "test:exec": "jest -i",
    "test:migrate": "dotenv -e .env.test -- prisma migrate dev --preview-feature",
    "lint": "eslint ./src/* ./tests/* --ext .js,.ts",
    "prod:start": "node dist/index.js",
    "prod:build": "tsc -p tsconfig.prod.json",
    "prod:migrate": "prisma migrate dev --preview-feature"
  },
  "dependencies": {
    "@prisma/client": "^3.4.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "firebase-admin": "^10.0.0",
    "form-data": "^4.0.0",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.6",
    "nodemailer": "^6.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^2.5.12",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "dotenv-cli": "^4.1.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "firebase": "^9.4.1",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "prisma": "^3.4.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
