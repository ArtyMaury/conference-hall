{
  "firestore": {
    "rules": "./config/firestore.rules",
    "indexes": "./config/firestore.indexes.json"
  },
  "storage": {
    "rules": "./config/storage.rules"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": "8080"
    },
    "auth": {
      "port": "9099"
    },
    "functions": {
      "port": "5001"
    },
    "ui": {
      "enabled": true
    }
  }
}
